# LLM Platform Configuration
MODEL_PLATFORM=bedrock  # Options: "bedrock" or "openrouter"

# AWS Bedrock Configuration (required if MODEL_PLATFORM=bedrock)
AWS_REGION=eu-west-1
AWS_PROFILE=your_aws_profile_name

# OpenRouter Configuration (required if MODEL_PLATFORM=openrouter)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Model Assignments
# For Bedrock: Use Bedrock model IDs (e.g., eu.anthropic.claude-haiku-4-5-20251001-v1:0)
# For OpenRouter: Use OpenRouter model IDs (e.g., meta-llama/llama-3.3-70b-instruct:free)

MODEL_ENGLAND=eu.anthropic.claude-haiku-4-5-20251001-v1:0
MODEL_FRANCE=eu.anthropic.claude-haiku-4-5-20251001-v1:0
MODEL_GERMANY=eu.anthropic.claude-haiku-4-5-20251001-v1:0
MODEL_ITALY=eu.anthropic.claude-haiku-4-5-20251001-v1:0
MODEL_AUSTRIA=eu.anthropic.claude-haiku-4-5-20251001-v1:0
MODEL_RUSSIA=eu.anthropic.claude-haiku-4-5-20251001-v1:0
MODEL_TURKEY=eu.anthropic.claude-haiku-4-5-20251001-v1:0

# Game Settings
MAX_YEARS=20
DEFAULT_GAME_ID=llm_game_001

# Press Round Configuration
PRESS_ROUNDS_SPRING_1901=3
PRESS_ROUNDS_DEFAULT=2

# Summarizer Model (for generating season summaries)
MODEL_SUMMARIZER=eu.anthropic.claude-haiku-4-5-20251001-v1:0

